pipeline {
    agent any

    stages {
        stage('Clone stage') {
            steps {
                git 'https://github.com/nguyenvu97/testhwebhook.git'
            }
        }
        stage('build stage') {
            steps {
               script {
                   // Tạo image Docker
                   docker.build('nguyenvu/golang')
                   
                   // Đẩy image đến Docker Registry
                   docker.withRegistry('https://index.docker.io/v1/', 'docker-hub') {
                       docker.image('nguyenvu/golang').push()
                   }
               }
            }
        }
    }
}
